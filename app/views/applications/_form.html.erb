<section id="content" class="m-t-lg wrapper-md animated fadeInDown">
  <a class="nav-brand" href="index.html">Register a New Application</a>
  <div class="row m-n">
    <div class="col-md-4 col-md-offset-4 m-t-lg">
      <section class="panel">
        <header class="panel-heading text-center bg-primary">
          Create App
        </header>
        <%= form_for(@application, :html => {:class => 'panel-body'}) do |f| %>
          <% if @application.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>

              <ul>
              <% @application.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.hidden_field :user_id, :value => current_user.id %>

          <div class="form-group">
            <label class="control-label">Name</label>
            <%= f.text_field :name, {autofocus: true, placeholder: "My Awesome App", class: "form-control"} %>
          </div>
          <div class="form-group">
            <label class="control-label">Description</label>
            <%= f.text_area :description, {autofocus: true, placeholder: "Your description here...", class: "form-control"} %>
          </div>
          <div class="form-group">
            <label class="control-label">Repository Url</label>
            <%= f.text_field :repository_url, {autofocus: true, placeholder: "http://github.com/github_usernamea/app", class: "form-control"} %>
          </div>
          <div class="form-group">
            <label class="control-label">Framework</label>
            <div class="row">
              <div class="col-sm-12">
                <%= f.select :framework, Component::FRAMEWORKS, { include_blank: false }, {class: "form-control m-b"} %>
              </div>
            </div>
          </div>
          <div>
            <%= f.submit "Create App", class: 'btn btn-info', id: "submit" %>
          </div>
          <div class="line line-dashed"></div>
          <%= link_to 'Back', applications_path %>
        <% end %>
      </section>
    </div>
  </div>
</section>